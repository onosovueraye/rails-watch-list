<div class="container">
  <h2><%= @list.name %></h2>
  <%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>

  <%= link_to "Back", lists_path %> |

  <p><strong>Bookmarks</strong></p>
  <ul class="list-group">
    <% @list.bookmarks.each do |bookmark| %>
      <%= bookmark.movie.title %><li class="list-group-item">
      <%= bookmark.comment %>
      <%=link_to "Delete",
        bookmark_path(bookmark),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%></li>
    <% end %>
  </ul>

  <%=link_to "New Bookmark",  new_list_bookmark_path(@list)%>
